<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Participate</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/paper" method="POST">
            <div class="form-group">
              <label for="title">Enter your Quiz ID</label>
              <label style="color: red;font-size: larger;" for="invalidity"><%= invalidity%></label>
              <input type="text" class="form-control" name="quizid">
            </div>
            <button type="submit" class="btn btn-dark">Enter</button>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>