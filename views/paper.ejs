<%- include('partials/header') %>
  <div class="container mt-5">
    <h1><%= ques[0].title %></h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
              <!-- Makes POST request to /register route -->
            <form action="/evaluation" method="POST">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="<%= ques[0].id %>" name = "id" required>
                    <label style="color: blue;"  class="form-check-label" for="defaultCheck1">
                      Your Quiz ID : <%= ques[0].id %> (Please verify your quiz ID)
                    </label>
                  </div>
                  <br>
                <% for(let a = 1 ; a <= no_ques; a++) {%>
                <h4 for="question"><%= ques[a-1].question %></h4>
                <br>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question<%= a%>" id="exampleRadios1" value="1" >
                    <label class="form-check-label" for="exampleRadios1">
                      <%= ques[a-1].option1 %>
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="question<%= a%>" id="exampleRadios2" value="2">
                    <label class="form-check-label" for="exampleRadios2">
                        <%= ques[a-1].option2 %>
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="question<%= a%>" id="exampleRadios3" value="3" >
                    <label class="form-check-label" for="exampleRadios3">
                        <%= ques[a-1].option3 %>
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="question<%= a%>" id="exampleRadios4" value="4">
                    <label class="form-check-label" for="exampleRadios3">
                        <%= ques[a-1].option4 %>
                    </label>
                  </div>
                  <br>
                <% } %>
              <button type="submit" class="btn btn-dark">Finish</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/header') %>